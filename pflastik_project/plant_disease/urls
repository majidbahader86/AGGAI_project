from django.urls import path
from . import views

urlpatterns = [
    path('', views.disease_list, name='disease_list'),
    path('disease/<int:pk>/', views.disease_detail, name='disease_detail'),
    path('disease/<int:disease_id>/images/', views.disease_image_list, name='disease_image_list'),
    path('disease/<int:disease_id>/images/<int:image_id>/', views.disease_image_detail, name='disease_image_detail'),
    path('requests/', views.disease_identification_request_list, name='disease_identification_request_list'),
    path('requests/<int:pk>/', views.disease_identification_request_detail, name='disease_identification_request_detail'),
    path('forum/', views.forum_post_list, name='forum_post_list'),
    path('forum/<int:pk>/', views.forum_post_detail, name='forum_post_detail'),
    path('forum/<int:post_id>/comments/', views.forum_comment_list, name='forum_comment_list'),
    path('forum/<int:post_id>/comments/<int:comment_id>/', views.forum_comment_detail, name='forum_comment_detail'),
    path('alerts/', views.season_alert_list, name='season_alert_list'),
    path('alerts/<int:pk>/', views.season_alert_detail, name='season_alert_detail'),
    path('signup/', views.farmer_sign_up, name='farmer_sign_up'),
    path('login/', views.farmer_log_in, name='farmer_log_in'),
]
